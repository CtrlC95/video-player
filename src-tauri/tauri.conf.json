{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "video-player",
  "version": "0.1.0",
  "identifier": "com.johan.video-player",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "video-player",
        "width": 1920,
        "height": 1080,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "protocol": {
      "asset": {
        "scope": ["**"]
      }
    }
  }
}
